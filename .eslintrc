{
    "env": {
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "root": true,
    "rules": {
        "arrow-parens": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "eol-last": "error",
        "eqeqeq": "error",
        "indent": [
            "error",
            4,
            {
                "CallExpression": {
                    "arguments": "first"
                },
                "SwitchCase": 1
            }
        ],
        "key-spacing": [
            "error",
            {
                "afterColon": true
            }
        ],
        "keyword-spacing": "error",
        "no-dupe-args": "error",
        "no-dupe-keys": "error",
        "no-eval": "error",
        "no-extend-native": "error",
        "no-extra-bind": "error",
        "no-extra-semi": "error",
        "no-mixed-spaces-and-tabs": "error",
        "no-spaced-func": "error",
        "no-trailing-spaces": "error",
        "no-undef": "error",
        "no-underscore-dangle": "off",
        "no-unused-vars": [
            "error",
            {
                "args": "after-used",
                "vars": "all"
            }
        ],
        "no-var": "error",
        "prefer-const": "error",
        "quotes": [
            "error",
            "single",
            "avoid-escape"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-blocks": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "asyncArrow": "ignore",
                "named": "never"
            }
        ],
        "space-in-parens": "error",
        "space-infix-ops": "error",
        "strict": [
            "error",
            "global"
        ]
    }
}
